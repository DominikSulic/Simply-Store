<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Simply Store" Height="450" Width="800" MinHeight="450" MinWidth="600">
    <Window.Resources>
        <SolidColorBrush x:Key="labelsColor" Color="white"></SolidColorBrush>
        <SolidColorBrush x:Key="menuBg" Color="#212227"></SolidColorBrush>
        <SolidColorBrush x:Key="rectBg" Color="#3A3A3A"></SolidColorBrush>
        <SolidColorBrush x:Key="headerRectBg" Color="#212227"></SolidColorBrush>
        <SolidColorBrush x:Key="spBtnBg" Color="#2B2B2B"></SolidColorBrush>
        <SolidColorBrush x:Key="spBtnFg" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="spBtnBorderB" Color="#2B2B2B"></SolidColorBrush>
        <SolidColorBrush x:Key="spBtnHover" Color="#828282"></SolidColorBrush>
        <SolidColorBrush x:Key="dataGridBG" Color="#3A3A3A"></SolidColorBrush>
        <SolidColorBrush x:Key="dataGridFG" Color="white"></SolidColorBrush>
        <SolidColorBrush x:Key="dataGridRowBG" Color="#3A3A3A"></SolidColorBrush>
        <Style TargetType="Button" x:Key="gumbi">
            <Setter Property="Padding" Value="5,2,5,2"></Setter>
            <Setter Property="Background" Value="#45a755"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <Style TargetType="Rectangle" x:Key="headerRect">
            <Setter Property="Fill" Value="{DynamicResource headerRectBg}"></Setter>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{x:Null}"></Setter>
            <Setter Property="BorderBrush" Value="#4887ab"></Setter>
            <Setter Property="BorderThickness" Value="0,0,0,2"></Setter>
            <Setter Property="Foreground" Value="{DynamicResource labelsColor}"></Setter>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{x:Null}"></Setter>
            <Setter Property="BorderBrush" Value="#4887ab"></Setter>
            <Setter Property="BorderThickness" Value="0,0,0,2"></Setter>
            <Setter Property="Foreground" Value="{DynamicResource labelsColor}"></Setter>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="{DynamicResource rectBg}"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid x:Name="gridLogin" Visibility="Visible">
            <Rectangle></Rectangle>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Korisničko ime:" FontSize="20" Foreground="{DynamicResource labelsColor}"></Label>
                <TextBox x:Name="txbKorisnickoIme" Height="23"  Width="120"/>
                <Label Content="Lozinka:" FontSize="20" Foreground="{DynamicResource labelsColor}"></Label>
                <PasswordBox x:Name="txbLozinka" Height="23" Width="120"/>
                <Button x:Name="btnPrijava" Content="Prijavi se" Margin="0,10,0,0" Width="70" Click="btnPrijava_Click" Style="{DynamicResource gumbi}"></Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridGlavni" Visibility="Hidden">
            <Grid.Resources>
                <Style TargetType="DataGrid">
                    <Setter Property="Background" Value="{DynamicResource dataGridBG}"></Setter>
                    <Setter Property="Foreground" Value="{DynamicResource dataGridFG}"></Setter>
                    <Setter Property="RowBackground" Value="{DynamicResource dataGridRowBG}"></Setter>
                    <Setter Property="HeadersVisibility" Value="Column"></Setter>
                    <Setter Property="GridLinesVisibility" Value="Horizontal"></Setter>
                    <Setter Property="BorderBrush" Value="{x:Null}"></Setter>
                    <Setter Property="HorizontalGridLinesBrush" Value="#FF2C2C2C"></Setter>
                    <Setter Property="FontSize" Value="15"></Setter>
                    <Setter Property="CanUserAddRows" Value="False"></Setter>
                    <Setter Property="CanUserDeleteRows" Value="False"></Setter>
                </Style>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="Black"></Setter>
                </Style>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource dataGridBG}"/>
                            <Setter Property="BorderBrush" Value="#00000000"></Setter>
                            <Setter Property="Foreground" Value="Green"/>
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="Margin" Value="10,0"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" ></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="2" Grid.Row="0" Style="{DynamicResource headerRect}"></Rectangle>
            <Label Content="Home" x:Name="naslovLabel" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="{DynamicResource labelsColor}" Margin="22,0,0,0"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Background="{DynamicResource menuBg}">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                        <Setter Property="FontSize" Value="18"></Setter>
                        <Setter Property="Background" Value="{DynamicResource spBtnBg}"></Setter>
                        <Setter Property="Foreground" Value="{DynamicResource spBtnFg}"></Setter>
                        <Setter Property="BorderBrush" Value="{DynamicResource spBtnBorderB}"></Setter>
                        <Setter Property="Template">
                            <Setter.Value>

                                <ControlTemplate TargetType="Button">
                                    <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" Margin="0,5,0,5" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource spBtnHover}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <Button x:Name="menuHome" Content="Home" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="menuHome_Click" ></Button>
                <Button x:Name="menuProstorije" Content="Prostorije" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="menuProstorije_Click"></Button>
                <Button x:Name="menuSpremnici" Content="Spremnici" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="menuSpremnici_Click"></Button>
                <Button x:Name="menuStavke" Content="Stavke" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="menuStavke_Click"></Button>
                <Button x:Name="menuStavkePredIstekom" Content="Stavke pred istekom" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="menuStavkePredIstekom_Click"></Button>
                <Button x:Name="menuStatistika" Content="Dnevnik" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="menuStatistika_Click"></Button>
                <Button x:Name="menuOznake" Content="Oznake" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="menuOznake_Click"></Button>
                <Button x:Name="menuOpcije" Content="Opcije" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="menuOpcije_Click"></Button>
                <Button x:Name="menuIzlaz" Content="Izlaz" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="menuIzlaz_Click"></Button>
            </StackPanel>
            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridPocetna" Visibility="Hidden">
                <Rectangle></Rectangle>
                <Image Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300">
                    <Image.Source>
                        <BitmapImage UriSource="/images/logo.png" />
                    </Image.Source>
                </Image>
            </Grid>
            
            

            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridProstorije" Visibility="Hidden">
                <Rectangle></Rectangle>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Row="0" Height="20"  VerticalAlignment="Center" HorizontalAlignment="Stretch" KeyDown="ProstorijeSearchEnter" x:Name="ProstorijeSearch" Margin="5">
                        <TextBox.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Pretraži prostorije</TextBlock>
                                    <TextBlock>Upišite naziv ili dio naziva prostorije...</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>



                    <Button  Grid.Row="0" Grid.Column="1" Name="btnSearchProstorije"  VerticalAlignment="Center" HorizontalAlignment="Left" >
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/search.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Pretraži prostorije</TextBlock>
                                    <TextBlock>Upišite naziv ili dio naziva prostorije...</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="2" Name="btnkreirajProstoriju" Click="BtnkreirajProstoriju_Click_1" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="1,0.5">
                        <Button.Template>
                                <ControlTemplate>
                                <Image Source="/images/add.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Kreiraj prostoriju</TextBlock>
                                        <TextBlock>Otvara formu za kreiranje nove prostorije.</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    <Button Grid.Row="0" Grid.Column="3" Name="btnizmjeniProstoriju" VerticalAlignment="Center" RenderTransformOrigin="0,0.5" Click="BtnizmjeniProstoriju_Click_1" HorizontalAlignment="Center" >
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/modify.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Izmjeni prostoriju</TextBlock>
                                    <TextBlock>Otvara formu za izmjenu označene prostorije. Prostoriju možete označiti sa lijevom tipkom miša.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="4" Name="btnObrisiProstoriju" VerticalAlignment="Center" Click="BtnObrisiProstoriju_Click_1" HorizontalAlignment="Center" Margin="2">
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/remove.png"  Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Obriši prostoriju</TextBlock>
                                    <TextBlock>Briše označene prostorije iz baze podataka. Više prostorija možete odabrati koristeći ctrl ili shift tipku + lijevi klik miša.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="5" Name="btnkreirajPDFProstorije" Click="BtnkreirajPDFProstorije_Click" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="0.5" Opacity="0.1" Color="White" ShadowDepth="1" Direction="180"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate>
                                 <Image Source="/images/print.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">PDF Ispis</TextBlock>
                                    <TextBlock>Kreira PDF datoteku sa prikazanim podatcima.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>


                    <DataGrid Grid.Row="1" Grid.ColumnSpan="6" x:Name="dgProstorije" HorizontalAlignment="Stretch"  Margin="5,5,5,5" VerticalAlignment="Top"/>

                </Grid>

            </Grid>
            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridKreirajProstoriju" Visibility="Collapsed">
                <Rectangle></Rectangle>
                <StackPanel>
                    <Label Content="Naziv prostorije" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txtNazivProstorije"/>

                    <Label Content="Opis prostorije" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Top" Name="txtOpisProstorije"/>

                    <Label Content="Napomene" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Top" Name="txtNapomeneProstorije"/>

                    <Label Content="Broj prostorija za kreirati(opcionalno)" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Top" Name="txtBrojProstorija">
                        <TextBox.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Broj prostorija</TextBlock>
                                    <TextBlock>Broj prostorija koje će se automatski kreirati. Zadržat će se svi parametri osim što će se na kraj naziva prostorije dodati broj kreirane prostorije u zagradu.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>



                    <Grid Height="40" HorizontalAlignment="Center" Width="282" Margin="176,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnKreirajProstoriju"  Content="Kreiraj" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnKreirajProstoriju_Click" Margin="31,10,10,0" Style="{DynamicResource gumbi}">
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Kreiraj prostoriju</TextBlock>
                                        <TextBlock>Kreira novu prostoriju sa vrijednostima koje ste specificirali te ju sprema u bazu podataka</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="btnKreirajProstorijukOdustani"  Content="Odustani" VerticalAlignment="Top" Click="btnKreirajProstorijukOdustani_Click" Margin="10,10,0,0" Grid.Column="1" Width="95" HorizontalAlignment="Left" IsCancel="True" Style="{DynamicResource gumbi}" Background="#b54141"/>
                    </Grid>


                </StackPanel>

            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridIzmjeniProstoriju" Visibility="Collapsed">
                <Rectangle></Rectangle>
                <StackPanel>
                    <TextBox Grid.Row="1" Height="25" Width="100" Visibility="Collapsed" Name="txtIdProstorije"/>
                    <Label Content="Naziv prostorije" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txtNoviNazivProstorije"/>

                    <Label Content="Opis prostorije" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Top" Name="txtNoviOpisProstorije"/>

                    <Label Content="Napomene" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Grid.Row="1" Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txtNoveNapomeneProstorije"/>

                    <Grid Height="40" HorizontalAlignment="Center" Width="282" Margin="176,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnIzmjeniProstoriju"  Content="Izmjeni" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Click="btnIzmjeniProstoriju_Click" Margin="31,10,10,0" Style="{DynamicResource gumbi}">
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Izmjeni prostoriju</TextBlock>
                                        <TextBlock>Podaci u bazi podataka za prostoriju će se zamijeniti s podacima koje ste unijeli</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="btnIzmjeniProstorijukOdustani"  Content="Odustani" VerticalAlignment="Top" Click="btnIzmjeniProstorijukOdustani_Click" Margin="10,10,0,0" Grid.Column="1" Width="95" HorizontalAlignment="Left" IsCancel="True" Style="{DynamicResource gumbi}" Background="#b54141"/>
                    </Grid>


                </StackPanel>
            </Grid>

            
            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridSpremnici" Visibility="Hidden">
                <Rectangle></Rectangle>
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="9*"></RowDefinition>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0" Height="20" VerticalAlignment="Center" HorizontalAlignment="Stretch" KeyDown="SpremniciSearchEnter" x:Name="SpremniciSearch">
                        <TextBox.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Pretraži spremnike</TextBlock>
                                    <TextBlock>Upišite naziv ili dio naziva spremnika...</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>
                    <ComboBox Grid.Row="1" Grid.Column="0" x:Name="cmbProstorije" HorizontalAlignment="Stretch"  VerticalAlignment="Center" SelectionChanged="cmbProstorije_SelectionChanged">
                        <ComboBox.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Odaberite prostoriju</TextBlock>
                                    <TextBlock>Odaberite prostoriju za koju želite pregledati spremnike...</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </ComboBox.ToolTip>
                    </ComboBox>

                    <Button Grid.Row="1" Grid.Column="1"  x:Name="btnPrikaziSveSpremnike" Content="Prikaži sve" HorizontalAlignment="Left" VerticalAlignment="Center" Width="auto" Margin="5,0,0,0" Click="btnPrikaziSveSpremnike_Click" Style="{DynamicResource gumbi}"/>
                    <DataGrid Grid.Row="2" Grid.ColumnSpan="2" x:Name="dgSpremnici" HorizontalAlignment="Stretch"   VerticalAlignment="Top" SelectionChanged="dgSpremnici_SelectionChanged"></DataGrid>
                    <ListBox Grid.Row="2" Grid.Column="2" x:Name="lbxTagoviSpremnika" Grid.ColumnSpan="4" Margin="5,0,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Visibility="Collapsed"/>
                    <Button Grid.Row="0" Grid.Column="2" Name="btnKreirajSpremnik" Click="btnKreirajSpremnik_Click" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="1,0.5">
                         
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/add.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Kreiraj spremnik</TextBlock>
                                    <TextBlock>Otvara formu za kreiranje novog spremnika</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="3" Name="btnIzmjeniSpremnik" VerticalAlignment="Center" Click="btnIzmjeniSpremnik_Click" HorizontalAlignment="Center" >
                         
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/modify.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Izmjeni spremnik</TextBlock>
                                    <TextBlock>Otvara formu za izmjenu označenog spremnika. Spremnik možete označiti sa lijevom tipkom miša.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="4" Name="btnObrisiSpremnik" VerticalAlignment="Center" Click="btnObrisiSpremnik_Click" HorizontalAlignment="Center" >
                         
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/remove.png"  Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Obriši spremnik</TextBlock>
                                    <TextBlock>Briše označene spremnike iz baze podataka. Više spremnika možete odabrati koristeći ctrl ili shift tipku + lijevi klik miša.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="5" Name="btnkreirajPDFSpremnici" Click="BtnkreirajPDFSpremnici_Click" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="1,0.5">
                         
                        <Button.Template>
                            <ControlTemplate>
                                 <Image Source="/images/print.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">PDF Ispis</TextBlock>
                                    <TextBlock>Kreira PDF datoteku sa prikazanim podatcima.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button  Grid.Row="0" Grid.Column="1" Name="btnSearchSpremnici"  VerticalAlignment="Center" HorizontalAlignment="Left" >
                        <Button.Effect>
                                <DropShadowEffect BlurRadius="1" Opacity="0.3" Color="White" ShadowDepth="1" Direction="180"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate>
                                <Image Source="/images/search.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Pretraži spremnike</TextBlock>
                                        <TextBlock>Upišite naziv ili dio naziva spremnika...</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>

                    <Grid Grid.Row="3" Grid.ColumnSpan="2" x:Name="gridPopunjenost" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*" x:Name="postotakZauzetosti"/>
                                <ColumnDefinition Width="1*" x:Name="postotakSlobodnog"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*" MaxHeight="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
