            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridStatistika" Visibility="Hidden">
                <Rectangle></Rectangle>
                <Grid>
                    <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="3" Name="btnkreirajPDFDnevnika" Click="btnkreirajPDFDnevnika_Click" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="1,0.5">
                        <Button.Template>
                            <ControlTemplate>
                                 <Image Source="/images/print.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">PDF Ispis</TextBlock>
                                    <TextBlock>Kreira PDF datoteku sa prikazanim podatcima.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                    <Label Content="Pretraži:"  Foreground="{DynamicResource labelsColor}" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
                    <TextBox  Height="20"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" KeyDown="StatistikaSearchEnter" x:Name="StatistikaSearch"  Margin="10,0,10,0"></TextBox>
                    </StackPanel>
                        <DataGrid Grid.Row="1" Grid.ColumnSpan="5" x:Name="dgStatistika"></DataGrid>
                </Grid>
            </Grid>

            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridOznake" Visibility="Hidden">
                <Rectangle></Rectangle>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Postojeće oznake:" VerticalAlignment="Bottom" Foreground="{DynamicResource labelsColor}" FontSize="15"></Label>

                    <Button Grid.Row="0" Grid.Column="1" Name="btnKreirajOznaku"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnKreirajOznaku_Click">
                         
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/add.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Kreiraj oznaku</TextBlock>
                                    <TextBlock>Otvara formu za kreiranje nove oznake</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="2" Name="btnPromjeniStatusOznake" VerticalAlignment="Center"   HorizontalAlignment="Center" Click="btnPromjeniStatusOznake_Click" >
                         
                        <Button.Template>
                            <ControlTemplate>
                                <Image Source="/images/modify.png" Stretch="Uniform" MaxWidth="40" MaxHeight="40" MinWidth="25"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Izmjeni stavku</TextBlock>
                                    <TextBlock>Otvara formu za izmjenu označene stavke. Stavku možete označiti pritiskom na lijevu tipku miša.</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <DataGrid Grid.Row="1" Grid.Column="0" x:Name="dgOznake"></DataGrid>
                </Grid>
            </Grid>
            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridKreirajOznaku" Visibility="Collapsed">
                <Rectangle></Rectangle>
                <StackPanel>
                    <Label Content="Naziv oznake" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="20" Foreground="{DynamicResource labelsColor}"/>
                    <TextBox Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txbNazivOznake"/>
                    <Label Content="Kvarljivost oznake" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="20" Foreground="{DynamicResource labelsColor}"/>
                    <Grid Height="60" HorizontalAlignment="Center" Width="282">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"></RowDefinition>
                            <RowDefinition Height="0.5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Content="Kvarljiva" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" FontSize="15" Foreground="{DynamicResource labelsColor}"></Label>
                        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="kvarljivost" x:Name="rbtnKvarljiva"  HorizontalAlignment="Right" VerticalAlignment="Center"></RadioButton>
                        <Label Content="Ne kvarljiva" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="15" Foreground="{DynamicResource labelsColor}"></Label>
                        <RadioButton  Grid.Column="0" Grid.Row="1" GroupName="kvarljivost" x:Name="rbtnNeKvarljiva"  HorizontalAlignment="Right" VerticalAlignment="Center"></RadioButton>

                    </Grid>

                    <Grid Height="40" HorizontalAlignment="Center" Width="282">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnKreirajOznakuSpremi"  Content="Kreiraj oznaku" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="31,10,10,0" Click="btnKreirajOznakuSpremi_Click" Style="{DynamicResource gumbi}" >
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">Kreiraj prostoriju</TextBlock>
                                        <TextBlock>Kreira novu prostoriju sa vrijednostima koje ste specificirali te ju sprema u bazu podataka</TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="btnKreirajOznakuOdustani" Click="btnKreirajOznakuOdustani_Click" Content="Odustani" VerticalAlignment="Top" Margin="10,10,0,0" Grid.Column="1" Width="95" HorizontalAlignment="Left" IsCancel="True" Style="{DynamicResource gumbi}" Background="#b54141"/>
                    </Grid>
                </StackPanel>
            </Grid>
           
            
            
            <Grid Grid.Column="1" Grid.Row="1" x:Name="gridOpcije" Visibility="Collapsed">
                <Rectangle></Rectangle>
                <StackPanel>
                    <Label Content="Dark Theme" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource labelsColor}"/>
                    <CheckBox x:Name="chkDarkTheme" HorizontalAlignment="Center" VerticalAlignment="Top"  Click="chkDarkTheme_Click"/>
                    <Label Margin="0,10,0,0" HorizontalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource labelsColor}" Content="Koliko dana prije isteka roka trajanja stavke želite da vas obavijestimo?"></Label>
                    <TextBox Height="20"  Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="BrojDana"></TextBox>
                    <TextBlock FontSize="16" TextDecorations="Underline" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
                        <Hyperlink NavigateUri="https://github.com/foivz/r19023/wiki/3.-Korisni%C4%8Dka-dokumentacija" RequestNavigate="Hyperlink_RequestNavigate">
                            Help!
                        </Hyperlink>
                    </TextBlock>
                    <Button  x:Name="btnSpremiPostavke" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Spremi postavke" Margin="0,10,0,0" Width="120" Height="20" Click="btnSpremiPostavke_Click" Style="{DynamicResource gumbi}"></Button>

                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</Window>
